<h2>Leave a review for <strong><%= @restaurant.name %></strong></h2>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to "Back to homepage", restaurants_path  %>
  </div>
<% end %>

